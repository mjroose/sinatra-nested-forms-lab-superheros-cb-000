<h1>Create a Team and Heroes!</h1>

<form method="POST" action="/teams">
  <p>
    <label for="team_name">Team Name: </label>
    <input type="text" id="team_name" name="name">
  </p>

  <p>
    <label for="team_motto">Team Motto: </label>
    <input type="text" id="team_motto" name="motto">
  </p>

  <h2>Hero</h2>
  <p>
    <label for="hero_name_1">Hero's Name: </label>
    <input type="text" id="hero_name_1" name="team[members][][name]">
  </p>

  <p>
    <label for="hero_power_1">Hero's Power: </label>
    <input type="text" id="hero_power_1" name="team[members][][power]">
  </p>

  <p>
    <label for="hero_bio_1">Hero's Biography: </label>
    <input type="text" id="hero_bio_1" name="team[members][][bio]">
  </p>
  
</form>

