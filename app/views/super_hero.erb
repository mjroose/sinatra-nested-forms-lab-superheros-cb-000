<h1>Create a Team and Heroes!</h1>

<form method="POST" action="/teams">
  <p>
    <label for="team_name">Team Name: </label>
    <input type="text" id="team_name" name="team[name]">
  </p>

  <p>
    <label for="team_motto">Team Motto: </label>
    <input type="text" id="team_motto" name="team[motto]">
  </p>

  <% for i in 1..3 do %>
    <h2>Hero <%= i %></h2>
    <p>
      <label for=<%= "hero_name_#{i}" %>>Hero's Name: </label>
      <input type="text" id=<%= "hero_name_#{i}" %> name="team[members][][name]">
    </p>

    <p>
      <label for=<%= "hero_power_#{i}" %>>Hero's Power: </label>
      <input type="text" id=<%= "hero_power_#{i}" %> name="team[members][][power]">
    </p>

    <p>
      <label for=<%= "hero_bio_#{i}" %>>Hero's Biography: </label>
      <input type="text" id=<%= "hero_bio_#{i}" %> name="team[members][][bio]">
    </p>
  <% end %>

  <input type="submit" id="submit">
</form>
